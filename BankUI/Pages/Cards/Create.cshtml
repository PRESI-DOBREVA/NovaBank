@page  
@model BankUI.Pages.Cards.CreateModel  

@{  
   // Задаване на заглавие на страницата  
   ViewData["Title"] = "Създай";  
}  

<h1>Създай</h1>  

<h4>Карта</h4>  
<hr />  
<div class="row">  
   <div class="col-md-4">  
       <form method="post">  
           <!-- Показване на обобщение на грешките при валидиране -->  
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>  

           <!-- Поле за въвеждане на номер на картата -->  
           <div class="form-group">  
               <label asp-for="Card.Number" class="control-label"></label>  
               <input asp-for="Card.Number" class="form-control" />  
               <span asp-validation-for="Card.Number" c="text-danger"></span>  
           </div>  

           <!-- Поле за избор на свързана сметка -->  
           <div class="form-group">  
               <label asp-for="Card.AccountId" class="control-label"></label>  
               <select asp-for="Card.AccountId" class ="form-control" asp-items="ViewBag.AccountId"></select>  
           </div>  

           <!-- Поле за въвеждане на тип на картата -->  
           <div class="form-group">  
               <label asp-for="Card.Type" c="control-label"></label>  
               <input asp-for="Card.Type" c="form-control" />  
               <span asp-validation-for="Card.Type" c="text-danger"></span>  
           </div>  

           <!-- Бутон за създаване на нова карта -->  
           <div class="form-group">  
               <input type="submit" value="Create" class="btn btn-primary" />  
           </div>  
       </form>  
   </div>  
</div>  

<div>  
   <!-- Връзка за връщане към списъка -->  
   <a asp-page="Index">Back to List</a>  
</div>  

@section Scripts {  
   <!-- Зареждане на скриптове за валидиране -->  
   @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}
