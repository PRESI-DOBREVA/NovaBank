@page
@model BankUI.Pages.Cards.CreateModel

@{
    ViewData["Title"] = "Създай";
}

<h1>Създай</h1>

<h4>Карта</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Card.CardNumber" class="control-label"></label>
                <input asp-for="Card.CardNumber" class="form-control" />
                <span asp-validation-for="Card.CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.AccountId" class="control-label"></label>
                <select asp-for="Card.AccountId" class ="form-control" asp-items="ViewBag.AccountId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Card.CardType" class="control-label"></label>
                <input asp-for="Card.CardType" class="form-control" />
                <span asp-validation-for="Card.CardType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
