@page
@model BankUI.Pages.Cards.EditModel

@{
    ViewData["Title"] = "Редактирай";
}

<h1>Редактирай</h1>

<h4>Карта</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Card.CardNumber" />
            <div class="form-group">
                <label asp-for="Card.AccountId" class="control-label"></label>
                <select asp-for="Card.AccountId" class="form-control" asp-items="ViewBag.AccountId"></select>
                <span asp-validation-for="Card.AccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.CardType" class="control-label"></label>
				<input asp-for="Card.CardType" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
