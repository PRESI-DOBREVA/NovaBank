@page  
@model BankUI.Pages.Cards.EditModel  

@{  
   // Задаване на заглавие на страницата  
   ViewData["Title"] = "Редактирай";  
}  

<h1>Редактирай</h1>  

<h4>Карта</h4>  
<hr />  
<div class="row">  
   <div class="col-md-4">  
       <form method="post">  
           <!-- Показване на обобщение на грешките при валидация -->  
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
           
           <!-- Скрито поле за ID на картата -->  
           <input type="hidden" asp-for="Card.Id" />  
           
           <div class="form-group">  
               <!-- Етикет за AccountId -->  
               <label asp-for="Card.AccountId" class="control-label"></label>  
               
               <!-- Падащо меню за избор на AccountId -->  
               <select asp-for="Card.AccountId" class="form-control" asp-items="ViewBag.AccountId"></select>  
               
               <!-- Показване на грешки за AccountId -->  
               <span asp-validation-for="Card.AccountId" class="text-danger"></span>  
           </div>  
           
           <div class="form-group">  
               <!-- Етикет за Type -->  
               <label asp-for="Card.Type" class="control-label"></label>  
               
               <!-- Поле за въвеждане на Type -->  
               <input asp-for="Card.Type" class="form-control" />  
           </div>  
           
           <div class="form-group">  
               <!-- Бутон за запазване на промените -->  
               <input type="submit" value="Save" class="btn btn-primary" />  
           </div>  
       </form>  
   </div>  
</div>  

<div>  
   <!-- Връзка за връщане към списъка -->  
   <a asp-page="./Index">Back to List</a>  
</div>  

@section Scripts {  
   <!-- Зареждане на скриптове за валидация -->  
   @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}
