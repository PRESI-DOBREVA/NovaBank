@page
@model BankUI.Pages.Cards.DetailsModel

@{
   // Задаване на заглавие на страницата
   ViewData["Title"] = "Детайли";
}

<h1>Детайли</h1>

<div>
   <h4>Карта</h4>
   <hr />
   <dl class="row">
       <dt class="col-sm-2">
           <!-- Показване на името на полето за акаунт -->
           @Html.DisplayNameFor(model => model.Card.Account)
       </dt>
       <dd class="col-sm-10">
           <!-- Показване на идентификатора на акаунта -->
           @Html.DisplayFor(model => model.Card.Account.Id)
       </dd>
       <dt class="col-sm-2">
           <!-- Показване на името на полето за тип карта -->
           @Html.DisplayNameFor(model => model.Card.Type)
       </dt>
       <dd class="col-sm-10">
           <!-- Показване на типа на картата -->
           @Html.DisplayFor(model => model.Card.Type)
       </dd>
   </dl>
</div>
<div>
   <!-- Линк за редактиране на текущата карта -->
   <a asp-page="./Edit" asp-route-id="@Model.Card.Id">Edit</a> |
   <!-- Линк за връщане към списъка с карти -->
   <a asp-page="./Index">Back to List</a>
</div>
