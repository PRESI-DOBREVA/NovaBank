@page  
@model BankUI.Pages.Cards.IndexModel  

@{  
   // Задаване на заглавие на страницата  
   ViewData["Title"] = "Карти";  
}  

<h1>Карти</h1>  

<p>  
   <!-- Линк за добавяне на нова карта -->  
   <a asp-page="Create" class="btn btn-primary">Добави нова карта</a>  
</p>  
<table class="table">  
   <thead>  
       <tr>  
           <th>  
               <!-- Колона за сметката на човека -->  
               Сметка на човека  
           </th>  
           <th>  
               <!-- Колона за типа на картата -->  
               Тип карта  
           </th>  
           <th></th>  
       </tr>  
   </thead>  
   <tbody>  
       @foreach (var item in Model.Card) {  
           <tr>  
               <td>  
                   <!-- Показване на номера на сметката -->
                    @Html.DisplayFor(modelItem => item.Number)
               </td>
               <td>
                    <!-- Показване на идентификатора на сметката -->
                    @Html.DisplayFor(modelItem => item.AccountId)
               <td>  
                   <!-- Показване на типа на картата -->
                    @Html.DisplayFor(modelitem => item.Type)
               </td>  
               <td>  
                   <!-- Линкове за редактиране, детайли и изтриване на картата -->  
                   <a asp-page="./Edit" asp-route-id="@item.Id">Редактирай</a> |  
                   <a asp-page="./Details" asp-route-id="@item.Id">Детайли</a> |  
                   <a asp-page="./Delete" asp-route-id="@item.Id">Изтрий</a>  
               </td>  
           </tr>  
       }  
   </tbody>  
</table>
