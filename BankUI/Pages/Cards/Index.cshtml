@page
@model BankUI.Pages.Cards.IndexModel

@{
    ViewData["Title"] = "Карти";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<p class="text-center">
    <!-- Бутон за създаване на нова карта -->
    <a asp-page="Create" class="btn btn-primary">Добави нова карта</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <!-- Заглавия на колоните в таблицата -->
                <th>Номер на акаунт</th>
                <th>Тип карта</th>
                <th class="text-center">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Card)
            {
                <tr>
                    <!-- Показване на данни за всяка карта -->
                    <td>@Html.DisplayFor(modelItem => item.Account.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td> 
                    <td class="text-center">
                        <!-- Бутон за редактиране на карта -->
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редактирай</a>
                        <!-- Бутон за преглед на детайли на карта -->
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Детайли</a>
                        <!-- Бутон за изтриване на карта -->
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Изтрий</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
