@page
@model BankUI.Pages.Customers.DetailsModel

@{
   // Задаване на заглавие на страницата
   ViewData["Title"] = "Детайли";
}

<h1>Детайли</h1>

<div>
   <h4>Клиент</h4>
   <hr />
   <dl class="row">
       <dt class="col-sm-2">
           <!-- Показване на името на клиента -->
           @Html.DisplayNameFor(model => model.Customer.Name)
       </dt>
       <dd class="col-sm-10">
           @Html.DisplayFor(model => model.Customer.Name)
       </dd>
       <dt class="col-sm-2">
           <!-- Показване на адреса на клиента -->
           @Html.DisplayNameFor(model => model.Customer.Address)
       </dt>
       <dd class="col-sm-10">
           @Html.DisplayFor(model => model.Customer.Address)
       </dd>
       <dt class="col-sm-2">
           <!-- Показване на телефонния номер на клиента -->
           @Html.DisplayNameFor(model => model.Customer.PhoneNumber)
       </dt>
       <dd class="col-sm-10">
           @Html.DisplayFor(model => model.Customer.PhoneNumber)
       </dd>
   </dl>
</div>
<div>
   <!-- Линк за редактиране на клиента -->
   <a asp-page="./Edit" asp-route-id="@Model.Customer.Id">Edit</a> |
   <!-- Линк за връщане към списъка с клиенти -->
   <a asp-page="./Index">Back to List</a>
</div>
