@page  
@model BankUI.Pages.Customers.EditModel  

@{  
   // Задаване на заглавие на страницата  
   ViewData["Title"] = "Редактирай";  
}  

<h1>Редактирай</h1>  

<h4>Клиент</h4>  
<hr />  
<div class="row">  
   <div class="col-md-4">  
       <form method="post">  
           <!-- Показване на обобщение на грешките при валидиране -->  
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
           <!-- Скрита стойност за идентификатора на клиента -->  
           <input type="hidden" asp-for="Customer.Id" />  
           <div class="form-group">  
               <!-- Етикет за името на клиента -->  
               <label asp-for="Customer.Name" class="control-label"></label>  
               <!-- Поле за въвеждане на името на клиента -->  
               <input asp-for="Customer.Name" class="form-control" />  
               <!-- Показване на грешки за името на клиента -->  
               <span asp-validation-for="Customer.Name" class="text-danger"></span>  
           </div>  
           <div class="form-group">  
               <!-- Етикет за адреса на клиента -->  
               <label asp-for="Customer.Address" class="control-label"></label>  
               <!-- Поле за въвеждане на адреса на клиента -->  
               <input asp-for="Customer.Address" class="form-control" />  
               <!-- Показване на грешки за адреса на клиента -->  
               <span asp-validation-for="Customer.Address" class="text-danger"></span>  
           </div>
           <div class="form-group">
               <!-- Етикет за телефонния номер на клиента -->
               <label asp-for="Customer.PhoneNumber" class="control-label"></label>
               <!-- Поле за въвеждане на телефонния номер на клиента -->
               <input asp-for="Customer.PhoneNumber" class="form-control" />
               <!-- Показване на грешки за телефонния номер на клиента -->
               <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
           </div>
           <div class="form-group">  
               <!-- Бутон за запазване на промените -->  
               <input type="submit" value="Save" class="btn btn-primary" />  
           </div>  
       </form>  
   </div>  
</div>  

<div>  
   <!-- Връзка за връщане към списъка с клиенти -->  
   <a asp-page="./Index">Back to List</a>  
</div>  

@section Scripts {  
   // Зареждане на скриптове за валидиране  
   @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}
