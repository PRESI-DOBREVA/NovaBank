@page
@model BankUI.Pages.Loans.IndexModel

@{
    ViewData["Title"] = "Списък със заеми";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<p class="text-center">
    <a asp-page="Create" class="btn btn-primary">Създай нов заем</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Loan[0].Customer)</th>
                <th>@Html.DisplayNameFor(model => model.Loan[0].Amount)</th>
                <th>@Html.DisplayNameFor(model => model.Loan[0].Interest)</th>
                <th>@Html.DisplayNameFor(model => model.Loan[0].Term)</th>
                <th class="text-center">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Loan)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Customer.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                    <td>@Html.DisplayFor(modelItem => item.Interest)</td>
                    <td>@Html.DisplayFor(modelItem => item.Term)</td>
                    <td class="text-center">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редактирай</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Детайли</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Изтрий</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
