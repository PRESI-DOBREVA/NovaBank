@page
@model BankUI.Pages.Loans.CreateModel

@{
    ViewData["Title"] = "Създаване на заем";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<h4 class="text-center">Създайте нов заем</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Loan.CustomerId" class="control-label"></label>
                <select asp-for="Loan.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="Loan.CustomerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Loan.Amount" class="control-label"></label>
                <input asp-for="Loan.Amount" class="form-control" />
                <span asp-validation-for="Loan.Amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Loan.Interest" class="control-label"></label>
                <input asp-for="Loan.Interest" class="form-control" />
                <span asp-validation-for="Loan.Interest" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Loan.Term" class="control-label"></label>
                <input asp-for="Loan.Term" class="form-control" />
                <span asp-validation-for="Loan.Term" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-3">
                <input type="submit" value="Създай заем" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-page="Index" class="btn btn-secondary">Обратно към списъка</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
