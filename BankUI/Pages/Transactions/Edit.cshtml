@page  
@model BankUI.Pages.Transactions.EditModel  

@{  
   // Задаване на заглавието на страницата  
   ViewData["Title"] = "Edit";  
}  

<h1>Edit</h1>  

<h4>Transaction</h4>  
<hr />  
<div class="row">  
   <div class="col-md-4">  
       <form method="post">  
           <!-- Показване на обобщение на грешките при валидиране -->  
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
           <!-- Скрито поле за идентификатора на транзакцията -->  
           <input type="hidden" asp-for="Transaction.Id" />  
           <div class="form-group">  
               <!-- Етикет и падащо меню за избор на акаунт -->  
               <label asp-for="Transaction.AccountId" class="control-label"></label>  
               <select asp-for="Transaction.AccountId" class="form-control" asp-items="ViewBag.AccountId"></select>  
               <span asp-validation-for="Transaction.AccountId" class="text-danger"></span>  
           </div>  
           <div class="form-group">  
               <!-- Етикет и поле за въвеждане на сума -->  
               <label asp-for="Transaction.Amount" class="control-label"></label>  
               <input asp-for="Transaction.Amount" class="form-control" />  
               <span asp-validation-for="Transaction.Amount" class="text-danger"></span>  
           </div>  
           <div class="form-group">  
               <!-- Етикет и поле за въвеждане на тип транзакция -->  
               <label asp-for="Transaction.TransactionType" class="control-label"></label>  
               <input asp-for="Transaction.TransactionType" class="form-control" />  
               <span asp-validation-for="Transaction.TransactionType" class="text-danger"></span>  
           </div>  
           <div class="form-group">  
               <!-- Бутон за запазване на промените -->  
               <input type="submit" value="Save" class="btn btn-primary" />  
           </div>  
       </form>  
   </div>  
</div>  

<div>  
   <!-- Връзка за връщане към списъка -->  
   <a asp-page="./Index">Back to List</a>  
</div>  

@section Scripts {  
   <!-- Зареждане на скриптове за валидиране -->  
   @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}
