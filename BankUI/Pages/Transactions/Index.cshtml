@page
@model BankUI.Pages.Transactions.IndexModel

@{
    // Задаване на заглавие за страницата
    ViewData["Title"] = "Транзакции";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<p class="text-center">
    <!-- Бутон за създаване на нова транзакция -->
    <a asp-page="Create" class="btn btn-primary">Направете нова транзакция</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <!-- Заглавия на колоните в таблицата -->
            <th>Сметка</th> 
            <th>Сума</th> 
            <th>Тип на транзакцията</th>
            <th class="text-center">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Transaction)
        {
            <tr>
                <!-- Показване на данни за всяка транзакция -->
                <td>@Html.DisplayFor(modelItem => item.Account.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>@Html.DisplayFor(modelItem => item.TransactionType)</td>
                <td class="text-center">
                    <!-- Бутон за редактиране на транзакция -->
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редактирай</a>
                    <!-- Бутон за преглед на детайли на транзакция -->
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Детайли</a>
                    <!-- Бутон за изтриване на транзакция -->
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

