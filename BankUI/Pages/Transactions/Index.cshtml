@page
@model BankUI.Pages.Transactions.IndexModel

@{
    ViewData["Title"] = "Транзакции";
}

<h1>Транзакции</h1>

<p>
    <!-- Бутон за създаване на нова транзакция -->
    <a asp-page="Create">Направете нова транзакция</a>
</p>
<table class="table">
    <thead>
        <tr>
            <!-- Заглавия на колоните в таблицата -->
            <th>Сметка</th> 
            <th>Сума</th> <
            <th>Тип на транзакцията</th>
            <th class="text-center">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Transaction)
        {
            <tr>
                <!-- Показване на данни за всяка транзакция -->
                <td>@Html.DisplayFor(modelItem => item.Account.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>@Html.DisplayFor(modelItem => item.TransactionType)</td>
                <td>
                    <!-- Бутон за редактиране на транзакция -->
                    <a asp-page="./Edit" asp-route-id="@item.Id">Редактирай</a>
                    <!-- Бутон за преглед на детайли на транзакция -->
                    <a asp-page="./Details" asp-route-id="@item.Id">Детайли</a>
                    <!-- Бутон за изтриване на транзакция -->
                    <a asp-page="./Delete" asp-route-id="@item.Id">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>
