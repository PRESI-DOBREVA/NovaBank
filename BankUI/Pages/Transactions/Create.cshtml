@page  
@model BankUI.Pages.Transactions.CreateModel  

@{  
   // Задаване на заглавието на страницата  
   ViewData["Title"] = "Create";  
}  

<h1>Create</h1>  

<h4>Transaction</h4>  
<hr />  
<div class="row">  
   <div class="col-md-4">  
       <form method="post">  
           <!-- Показване на обобщение на грешките при валидиране -->  
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>  

           <!-- Поле за избор на акаунт -->  
           <div class="form-group">  
               <label asp-for="Transaction.AccountId" class="control-label"></label>  
               <select asp-for="Transaction.AccountId" class ="form-control" asp-items="ViewBag.AccountId"></select>  
           </div>  

           <!-- Поле за въвеждане на сума -->  
           <div class="form-group">  
               <label asp-for="Transaction.Amount" class="control-label"></label>  
               <input asp-for="Transaction.Amount" class="form-control" />  
               <span asp-validation-for="Transaction.Amount" class="text-danger"></span>  
           </div>  

           <!-- Поле за избор на тип на транзакцията -->  
           <div class="form-group">  
               <label asp-for="Transaction.TransactionType" class="control-label"></label>  
               <select class="form-control" asp-for="Transaction.TransactionType" class="form-control" asp-items="ViewBag.TransactionType">  
                   <option>Избери тип на транзакцията</option>  
               </select>  
           </div>  

           <!-- Бутон за създаване на транзакция -->  
           <div class="form-group">  
               <input type="submit" value="Create" class="btn btn-primary" />  
           </div>  
       </form>  
   </div>  
</div>  

<div>  
   <!-- Връзка за връщане към списъка -->  
   <a asp-page="Index">Back to List</a>  
</div>  

@section Scripts {
    <!-- Зареждане на скриптове за валидиране   -->
   @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}
