@page  
@model BankUI.Pages.Accounts.EditModel  

@{  
   // Задаване на заглавие на страницата  
   ViewData["Title"] = "Редактирай";  
}  

<h1>Редактирай</h1>  

<h4>Акаунт</h4>  
<hr />  
<div class="row">  
   <div class="col-md-4">  
       <form method="post">  
           <!-- Показване на обобщение на грешките при валидиране -->  
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
           
           <!-- Скрито поле за ID на акаунта -->  
           <input type="hidden" asp-for="Account.Id" />  
           
           <div class="form-group">  
               <!-- Етикет за баланса на акаунта -->  
               <label asp-for="Account.Balance" class="control-label"></label>  
               <!-- Поле за въвеждане на баланса на акаунта -->  
               <input asp-for="Account.Balance" class="form-control" />  
               <!-- Показване на грешки при валидиране на баланса -->  
               <span asp-validation-for="Account.Balance" class="text-danger"></span>  
           </div>  
           
           <div class="form-group">  
               <!-- Етикет за ID на клиента -->  
               <label asp-for="Account.CustomerId" class="control-label"></label>  
               <!-- Падащо меню за избор на клиент -->  
               <select asp-for="Account.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>  
               <!-- Показване на грешки при валидиране на ID на клиента -->  
               <span asp-validation-for="Account.CustomerId" class="text-danger"></span>  
           </div>  
           
           <div class="form-group">  
               <!-- Бутон за запазване на промените -->  
               <input type="submit" value="Save" class="btn btn-primary" />  
           </div>  
       </form>  
   </div>  
</div>  

<div>  
   <!-- Връзка за връщане към списъка -->  
   <a asp-page="./Index">Back to List</a>  
</div>  

@section Scripts {  
   // Зареждане на скриптове за валидиране  
   @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}
